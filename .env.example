# ============================================================================
# CYRA - VARIABLES D'ENVIRONNEMENT D'EXEMPLE
# Copiez ce fichier vers .env et modifiez avec vos vraies valeurs
# ============================================================================

# ============================================================================
# BASE DE DONNÉES POSTGRESQL
# ============================================================================
DB_NAME=Asterix
DB_USER=votre_utilisateur
DB_PASSWORD=votre_mot_de_passe
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# PARAMÈTRES DE RECONNAISSANCE
# ============================================================================
RECOGNITION_THRESHOLD=0.55
RECOGNITION_MODEL=VGG-Face
ENABLE_LOGGING=false
SKIP_FRAMES=1

# ============================================================================
# PARAMÈTRES CAMÉRA
# ============================================================================
CAMERA_SOURCE=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# ============================================================================
# CHEMINS ET DOSSIERS
# ============================================================================
REFERENCE_IMAGES_DIR=./data/references/
LOGS_DIR=./logs/
CAPTURES_DIR=./captures/

# ============================================================================
# PARAMÈTRES D'AFFICHAGE
# ============================================================================
SHOW_DISTANCE=true
SHOW_FPS=false
FONT_SCALE=0.9

# ============================================================================
# SÉCURITÉ ET DÉVELOPPEMENT
# ============================================================================
DEBUG_MODE=false
LOG_LEVEL=INFO
AUTO_SAVE_CAPTURES=false

# ============================================================================
# INSTRUCTIONS
# ============================================================================
# 1. Copiez ce fichier : cp .env.example .env
# 2. Modifiez les valeurs dans .env
# 3. .env est automatiquement ignoré par Git pour votre sécurité
# 4. Ne partagez JAMAIS votre fichier .env avec vos vrais mots de passe
